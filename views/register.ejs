<h1>Register</h1>
<%- include ('./partials/messages') %>
<div class="form">
  <div class="title">Welcome</div>
  <div class="subtitle">Let's create your account!</div>
  <form action="/users/register" method="POST">
  <div class="input-container ic1">
    <input class="text-box" type="text" name="name" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
    <div class="cut"></div>
  </div>
  <div class="input-container ic2">
    <input class="text-box" type="email" name="email" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>"/>
    <div class="cut"></div>
  </div>
  <div class="input-container ic2">
    <input class="text-box" type="password" name="password" placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
    <div class="cut cut-short"></div>
  </div>
  <div class="input-container ic2">
    <input class="text-box" type="password2" name="password2" placeholder="Repeat password" value="<%= typeof password != 'undefined' ? password : '' %>" />
    <div class="cut cut-short"></div>
  </div>
  <button type="text" class="submit">submit</button>
</form>
</div>